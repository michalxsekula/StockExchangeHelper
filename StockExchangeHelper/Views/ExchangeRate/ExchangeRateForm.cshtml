@model StockExchangeHelper.Models.ExchangeRate

@{
    ViewBag.Title = "ExchangeRateForm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Get information about currency in specific time period.</h2>


@using (Html.BeginForm("SendRequest", "ExchangeRate"))
{
    <div class="form-group">
        @Html.LabelFor(x => x.StartDate)
        @Html.TextBoxFor(x => x.StartDate, "{0:yyyy-MM-dd}", new {@class = "form-control"})
        @Html.ValidationMessageFor(x=>x.StartDate)
    </div>

    <div class="form-group">
        @Html.LabelFor(x => x.EndDate)
        @Html.TextBoxFor(x => x.EndDate, "{0:yyyy-MM-dd}", new {@class = "form-control"})
        @Html.ValidationMessageFor(x=>x.EndDate)
    </div>

    <div class="form-group">
        @Html.LabelFor(x => x.Code)
        @Html.TextBoxFor(x => x.Code, new {@class = "form-control"})
        @Html.ValidationMessageFor(x=>x.Code)
    </div>

    @Html.HiddenFor(x => x.Id)
    <button type="submit" class="btn btn-primary">Get</button>
}